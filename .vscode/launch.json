    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug app",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}/src",
            "env": {
                "FLASK_APP": "dashboard:flask_app",
                "FLASK_ENV": "development"
            },
            "envFile": "${workspaceFolder}/.environment/development.env",
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": false,
            "justMyCode": true
        }
    ]
}